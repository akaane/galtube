#top {
	height: 70px;
	margin-top: 10px;
	margin-bottom: 10px;
  background-image: url(<%= asset_path 'split.jpg' %>);
  background-repeat: repeat-x;
  background-position: bottom;
}
.wrapper {
	width: 1000px;
	margin: 0px auto;
}
#logo {
	width: 234px;
	height: 60px;
	float: left;
}
#banner {
	width: 766px;
	height: 60px;
	float: left;
	background-color: green;
}
#video {
	width: 1000px;
	margin-top: 10px;
	margin-bottom: 10px;
	background-color: #0f0f0f;
}
#video_player {
	height: 405px;
}
#video_controller {
	height: 30px;
	background-color: green;
}
#related {
	width: 1000px;
	margin-top: 10px;
	margin-bottom: 10px;
}
#navgator {
	height: 40px;
	background-color: green;
	li {
		float: left;
	}
}
#related_list {
	li {
		height: 195px;
		width: 180px;
		margin: 10px 5px 10px 5px;
		float: left;
		img {
			float: left;
			width: 180px;
			height: 135px;
		}
		strong p {
			text-align: left;
			width: 180px;
			float: left;
		}
	}
}
#payment {
	width: 960px;
	height: 400px;
	background-color: green;
	float: left;
}
.text_desc {
	height: 40px;
	float: left;
}
.fl {
	float: left;
}
.fr {
	float: right;
}
.hi {
	color: #f4589e;
}