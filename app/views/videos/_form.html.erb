<%= form_for(@video) do |f| %>
  <% if @video.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@video.errors.count, "error") %> prohibited this video from being saved:</h2>

      <ul>
      <% @video.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title_en %><br />
    <%= f.text_field :title_en %>
  </div>
  <div class="field">
    <%= f.label :title_zh %><br />
    <%= f.text_field :title_zh %>
  </div>
  <div class="field">
    <%= f.label :duration %><br />
    <%= f.number_field :duration %>
  </div>
  <div class="field">
    <%= f.label :actor_id %><br />
		<%= f.select :actor_id, actors_available %>
  </div>
  <div class="field">
		<ol>
			<% @video.covers.each do |c| %>
				<li><span><%= image_tag c.uri, :class => "video_cover", :width => c.width, :height => c.height %></span>
					<span><%= link_to "Delete", :action => "destroy_cover", :id => c.id %></span></li>
			<% end %>
		</ol>
  </div>
<% unless @video.new_record? %>
  <div class="field">
    <%= f.label :hits %><br />
    <%= f.number_field :hits %>
  </div>
<% end %>
	<div class="field">
	  <%= f.label :reviews %><br />
	  <%= f.number_field :reviews %>
	</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
